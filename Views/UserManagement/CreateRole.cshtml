@model NetCoreBootstrap.Models.Views.UserManagementCreateRoleViewModel

<h3>Create role</h3>
@using (Html.BeginForm("CreateRole", "UserManagement", FormMethod.Post))
{  
    <div class='form-group'>
        @Html.DisplayFor(model => model.Name)
